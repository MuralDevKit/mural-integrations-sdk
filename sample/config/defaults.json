{
  "appName": "",
  "server": {
    "host": "<api-endpoint-host>",
    "port": 5005,
    "_https": {
      "_comment": "rename _https to http and provide path to key and cert for https",
      "cert": "<path-to-certificate>",
      "key": "<path-to-certificate-key>"
    }
  },
  "client": {
    "host": "<client-endpoint-host>",
    "port": 2022,
    "_https": {
      "_comment": "rename _https to http and provide path to key and cert for https",
      "cert": "<path-to-certificate>",
      "key": "<path-to-certificate-key>"
    }
  },
  "services": {
    "auth": { "host": "<api-endpoint-host>:5005", "secure": true },
    "mural": { "host": "<mural host e.g. app.mural.co or canvas-integration.mural.engineering>", "secure": true }
  },
  "clientApp": {
    "clientId": "<client-id>",
    "clientSecret": "<client-secret>",
    "redirectUri": "https://<client-endpoint-host>:2022/auth/callback",
    "scopes": [
      "murals:read",
      "murals:write",
      "rooms:read",
      "workspaces:read",
      "identity:read"
    ]
  }
}
