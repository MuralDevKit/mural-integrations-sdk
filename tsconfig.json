{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": [
      "es6", "dom", "es2015.promise", "es2016.array.include"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2018"
  },
	"include": [
		"./packages/**/*.ts",
		"./packages/**/*.tsx",
		"*.d.ts",
    "./stories/**/*.stories.tsx"
  ],
	"exclude": [
		"./node_modules"
	]
}
